<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jht.mapper.BoardMapper">

<!-- write테이블에 insert -->
	<insert id="content">
		insert into content(title,content,bno)
		values (#{title},#{content},#{bno})
	</insert>
	
	<select id="writecontent" resultType="org.jht.domain.WriteDTO">
		select *
		from content
		where bno=#{bno}
	</select>
	
</mapper>